# Server
PORT=3000

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Optional: set same value when registering webhook for better security
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# Google Sheets
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SHEET_NAME=Sheet1
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
# Paste private key in single line, keep \n as escaped new lines
GOOGLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nXXXX\n-----END PRIVATE KEY-----\n
# Optional timezone context for extraction
DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh
